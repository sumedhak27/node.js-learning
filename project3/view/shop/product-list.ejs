<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" type="text/css" href="/css/product.css"></head>
<body>
    <%- include('../includes/navigation.ejs')%>

    <main>
        <% if(prod.length > 0 ) { %>
            <div class="container">
                <% for(let product of prod) { %>
                    <div class="card">
                        <div class="card-header"> 
                            <h1><%=product.title%></h1>
                        </div>
                        <div class="card-img">
                            <img src= "<%= product.imgUrl %>"  alt="BOOK">
                        </div>
                        <div class="card-body">
                            <h3 class="card-price">Price : <%= product.price %> rs</h3>
                            <h4 class="card-description"><%= product.description %><h4>
                            <div class="card-action">
                                <a href="/products/<%= product.id %>" class="btn">Details</a>
                                <form action="/cart" method="POST">
                                    <button class="btn">Add to Cart</button>
                                </form>
                            </div>
                        </div>
                    </div>
                <%  } %>
            </div>
        <% } else { %>
            <h1> No Products are available for sale now.. We are Sorry for the inconvenience.</h1>
        <%  } %>
    </main>
<%- include('../includes/end.ejs')%>